@model TicketEShop.Domain.DTO.AddToShoppingCartDto

@{
    ViewData["Title"] = "Add To Shopping Card";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h3 class="text-center">Add selected Movie Ticket to your shopping card!</h3>

<div class="row mt-4">
    <div class="col-md-4 m-auto">
        <form method="post" asp-action="AddMovieTicketToCart">
            <input type="hidden" asp-for="SelectedMovieTicketId"/>
            <div class="form-group">
                <label asp-for="SelectedMovieTicket.MovieName"></label>
                <input disabled asp-for="SelectedMovieTicket.MovieName" class="form-control" />
            </div>

            <div class="form-group">
                <label asp-for="Quantity"></label>
                <input type="number" asp-for="Quantity" class="form-control" />
            </div>

            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-success" />
            </div>
        </form>
    </div>
</div>